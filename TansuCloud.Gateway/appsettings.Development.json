{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Identity": {
    "Authority": "http://tansucloud.identity:8080"
  },
  "ReverseProxy": {
    "Routes": {
      "identity-oidc-connect": {
        "ClusterId": "identity",
        "Match": { "Path": "/connect/{**catch-all}" },
        "AuthorizationPolicy": "AllowAnonymous"
      },
      "identity-oidc-discovery": {
        "ClusterId": "identity",
        "Match": { "Path": "/.well-known/{**catch-all}" },
        "AuthorizationPolicy": "AllowAnonymous"
      },
      "identity-jwks": {
        "ClusterId": "identity",
        "Match": { "Path": "/jwks" },
        "AuthorizationPolicy": "AllowAnonymous"
      }
    },
    "Clusters": {
      "identity": {
        "Destinations": {
          "identity-d1": {
            "Address": "http://tansucloud.identity:8080/"
          }
        }
      }
    }
  }
}
