{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "ValidAudiences": [
      "tansucloud.gateway",
      "tansucloud.bff"
    ]
  },
  "ReverseProxy": {
    "Routes": {
      "identity-oidc-connect": {
        "ClusterId": "identity",
        "Match": { "Path": "/connect/{**catch-all}" },
        "AuthorizationPolicy": "AllowAnonymous"
      },
      "identity-oidc-discovery": {
        "ClusterId": "identity",
        "Match": { "Path": "/.well-known/{**catch-all}" },
        "AuthorizationPolicy": "AllowAnonymous"
      },
      "identity-dev": {
        "ClusterId": "identity",
        "Match": { "Path": "/dev/{**catch-all}" },
        "AuthorizationPolicy": "AllowAnonymous"
      },
      "identity-auth": {
        "ClusterId": "identity",
        "Match": { "Path": "/auth/{**catch-all}" },
        "AuthorizationPolicy": "AllowAnonymous"
      },
      "identity-admin": {
        "ClusterId": "identity",
        "Match": { "Path": "/admin/{**catch-all}" }
      },
      "identity-echo": {
        "ClusterId": "identity",
        "Match": { "Path": "/echo/{**catch-all}" }
      }
    },
    "Clusters": {
      "identity": {
        "Destinations": {
          "identity-d1": { "Address": "http://tansucloud.identity:8080/" }
        }
      }
    }
  }
}